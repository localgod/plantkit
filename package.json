{
  "name": "plantkit",
  "version": "1.0.1",
  "description": "",
  "keywords": [
    "plantuml",
    "typescript",
    "archimate"
  ],
  "homepage": "https://github.com/localgod/plantkit#README",
  "bugs": {
    "url": "https://github.com/localgod/plantkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localgod/plantkit.git"
  },
  "license": "MIT",
  "author": "Johannes Skov Frandsen",
  "type": "module",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prebuild": "node scripts/generate-index.js",
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --watch",
    "exec": "node ./dist/src/PlantKit.mjs",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "mdlint": "markdownlint '**/*.md' --ignore node_modules --ignore slides --disable MD033 MD013 MD041",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "csv": "^6.3.11",
    "eslint": "^9.30.1",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  }
}
