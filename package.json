{
  "name": "plantkit",
  "version": "1.0.4",
  "description": "",
  "keywords": [
    "plantuml",
    "typescript",
    "archimate"
  ],
  "homepage": "https://github.com/localgod/plantkit#README",
  "bugs": {
    "url": "https://github.com/localgod/plantkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localgod/plantkit.git"
  },
  "license": "MIT",
  "author": "Johannes Skov Frandsen",
  "type": "module",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prebuild": "node scripts/generate-index.js",
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --watch",
    "exec": "node ./dist/src/PlantKit.mjs",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "mdlint": "markdownlint '**/*.md' --ignore node_modules --ignore slides --disable MD033 MD013 MD041",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@vitest/coverage-v8": "^4.0.8",
    "csv": "^6.3.11",
    "markdownlint-cli": "^0.47.0",
    "oxlint": "^1.49.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.8"
  }
}
